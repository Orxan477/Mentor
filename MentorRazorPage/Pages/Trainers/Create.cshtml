@page
@model MentorRazorPage.Pages.Trainers.CreateModel

<div class="container">
    <row>
        <div class="col-md-6 grid-margin stretch-card mt-5">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title"></h4>
                    <form class="forms-sample" method="post" enctype="multipart/form-data">
                        <div class="form-group">
                            <label asp-for="Trainers.Name"></label>
                            <input asp-for="Trainers.Name" class="form-control" placeholder="Name">
                            <span class="text-danger" asp-validation-for="Trainers.Name"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Trainers.Position"></label>
                            <input asp-for="Trainers.Position" class="form-control" placeholder="Position">
                            <span class="text-danger" asp-validation-for="Trainers.Position"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Trainers.Content"></label>
                            <input asp-for="Trainers.Content" class="form-control" placeholder="Content">
                            <span class="text-danger" asp-validation-for="Trainers.Content"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Trainers.Photo"></label>
                            <input asp-for="Trainers.Photo" class="form-control">
                            <span class="text-danger" asp-validation-for="Trainers.Photo"></span>
                        </div>
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-light" asp-page="Index">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </row>
</div>
